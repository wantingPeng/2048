{
  "compilerOptions": {
    "target": "ES6", // Set the JavaScript version to compile to
    "module": "commonjs", // Use CommonJS module system (you can change this if needed)
    "rootDir": "src", // Specify the root folder containing your TypeScript files
    "outDir": "dist", // Specify the output directory for compiled files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "skipLibCheck": true, // Skip type checking of declaration files
    "sourceMap": true // Generate source maps (optional, useful for debugging)
  },
  "include": [
    "src/**/*" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude the node_modules folder
    "dist" // Exclude the output folder to prevent looping
  ]
}
